    </controls:MetroWindow.Flyouts>-->


    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>

            <!--<ToggleButton Content="Commands"
            IsChecked="{Binding ElementName=Myfly, Path=IsOpen}" Cursor="Hand"/>-->

            <Button Cursor="Hand" x:Name="Cmdfly" Visibility="Visible" Click="Cmdfly_OnClick" >
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" 
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill"
                         Visual="{StaticResource appbar_user}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource Listuser}" />
                </StackPanel>
            </Button>

            <Button Cursor="Hand" x:Name="Cmdconnect" Visibility="Visible" >
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" 
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill"
                         Visual="{StaticResource appbar_connect}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource Connectazubu}" />
                </StackPanel>
            </Button>

            <Button Cursor="Hand" x:Name="CmdConf" Visibility="Visible" Click="CmdConf_OnClick" >
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" 
                       Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill"
                             Visual="{StaticResource appbar_cogs}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                                       VerticalAlignment="Center"
                                       Text="{DynamicResource Mnuadjust}" />
                </StackPanel>
            </Button>

            <Button Cursor="Hand" x:Name="Cmdabout" Visibility="Visible" Click="Cmdabout_OnClick" >
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" 
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill"
                         Visual="{StaticResource appbar_home}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                                   VerticalAlignment="Center"
                                   Text="{DynamicResource About}" />
                </StackPanel>
            </Button>




        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>


    <Grid>


        <Label x:Name="LblChan" Content="{DynamicResource Channelconnect}" HorizontalAlignment="Left" Margin="1,22,0,0" VerticalAlignment="Top" Width="469" Height="37" FontFamily="Segoe UI" FontSize="14" HorizontalContentAlignment="Center"/>
       


        <CheckBox VerticalContentAlignment="Stretch" x:Name="Chkauto" Content="{DynamicResource Autoscroll}" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Margin="10,64,0,0" VerticalAlignment="Top" Width="135"/>
        <Label  x:Name="Lblev" Content="Shamia rev.tester" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Width="391" Margin="2,673,-1,-22"/>
        <TextBox x:Name="Txtsend" HorizontalAlignment="Left" Height="38" Margin="10,630,0,0" TextWrapping="Wrap" Text="" ToolTip="" controls:TextBoxHelper.Watermark="{DynamicResource TxtChatWater}" controls:TextBoxHelper.ClearTextButton="True" VerticalAlignment="Top" Width="460" FontSize="15"/>
        <ListView x:Name="Listchat" HorizontalAlignment="Left" Height="538" Margin="10,87,0,0" VerticalAlignment="Top" Width="460" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"
                  
                  >
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Visibility" Value="Visible"></Setter>
                </Style>
            </ListView.Resources>
            
            <ListView.View>
                <GridView x:Name="Gridcoll" AllowsColumnReorder="False">
                    <GridViewColumn x:Name="Colluser"
                                    DisplayMemberBinding="{Binding Yuser}"
                                    Width="150"/>
                    <GridViewColumn x:Name="Collcontent"
                                    DisplayMemberBinding="{Binding Ycontent}"
                                    Width="300"/>
                </GridView>
            </ListView.View>

            <ListView.ContextMenu>
                <ContextMenu Visibility="Visible">
                    <!--<MenuItem Name="MnuWhisper" Header="Envia mensagem privada"/>-->
                    <MenuItem x:Name="Chatkick" Header="{DynamicResource Chatkick}"></MenuItem>
                    <MenuItem x:Name="Chattimeout" Header="{DynamicResource Chattimeout }"></MenuItem>
                    <MenuItem x:Name="Chatkickday" Header="{DynamicResource Chatkickday}"></MenuItem>
                    <MenuItem x:Name="Chatbanforever" Header="{DynamicResource Chatbanforever}"></MenuItem>
                    <MenuItem x:Name="Chatsetmoderator" Header="{DynamicResource Chatsetmoderator}"></MenuItem>
                    <MenuItem x:Name="Chatremovemoderator" Header="{DynamicResource Chatremovemoderator}"></MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
            
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="BorderBrush" Value="GhostWhite" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                    <Setter Property="Foreground" Value="White" ></Setter>
                    <Setter Property="Cursor" Value="Hand"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
            
        </ListView>

    </Grid>
</controls:MetroWindow>
